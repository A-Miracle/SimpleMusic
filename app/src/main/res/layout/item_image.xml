<?xml version="1.0" encoding="utf-8"?>
<com.ctao.music.module.imageselect.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_35">

    <com.ctao.music.module.imageselect.widget.SquareImageView
        android:id="@+id/item_iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_default_error" />

    <View
        android:id="@+id/item_v_prospects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_trans_80"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/item_iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:src="@mipmap/btn_select_off" />

</com.ctao.music.module.imageselect.widget.SquareFrameLayout>